{% extends 'components/base.html.twig' %}

{% block title %}API Settings{% endblock %}
{% block body %}
    {{ include('components/header.html.twig') }}
    <div class="container mx-auto mt-10 flex flex-col gap-4">
        <h1 class="text-4xl font-bold">
           API Settings
        </h1>
        <div>
            <h2 class="text-2xl font-semibold">Token</h2>
            <div class="flex flex-row gap-2 my-2">
                <div class="text-md flex flex-row">
                    <div class="text-white bg-gray-600 p-2 border-t border-l border-b border-gray-600 relative">
                        <p id="token" class="max-w-[500px] truncate">{{ latest_token }}</p>
                    </div>
                    <button class="text-white bg-gray-900 hover:bg-gray-700 p-2 border-t border-r border-b border-gray-600" onclick="copyToken()">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
                        </svg>
                    </button>
                </div>
                <button class="font-semibold text-sm px-4 py-2 bg-indigo-500 rounded-md hover:bg-indigo-400" onclick="generateNewToken()">Generate New Token</button>
            </div>
            {% if refresh_token.isValid() %}
                <p id="expiry" class="text-sm text-gray-400">Expiry Date {{ refresh_token.getValid() | date("d-m-Y H:i:s")}}</p>
            {% else %}
                <p id="expiry" class="text-sm text-red-600">Expired</p>
            {% endif %}
        </div>
    </div>
    <script>
        let currentToken = "{{ latest_token }}"

        function copyToken()
        {
            navigator.clipboard.writeText(currentToken);
            alert("Copied token");
        }

        async function generateNewToken()
        {
            const tokenElement = document.getElementById("token");
            const response = await fetch("{{ path("apiToken") }}");
            const data = await response.json();
            tokenElement.innerText = data.token;
            currentToken = data.token;

            const expiry = document.getElementById("expiry");
            expiry.className = "text-sm text-gray-400";
            expiry.innerText = "Expiry Date " + data.valid;
        }
    </script>
{% endblock %}