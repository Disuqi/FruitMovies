{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
    <div class="d-flex justify-content-center align-items-center m-auto py-5" style="background-image: url({{ asset('assets/FruitsPattern.png') }}); background-size: cover; background-position: center;">
        <div class="d-flex flex-column align-items-center justify-content-end text-center bg-black">
            <img class="h-25" src="{{ baseImageUrl }}{{ pickOfTheWeek.movie.getCoverPhoto() }}"/>
            <div class="my-2">
                <h1>FRUIT PICK</h1>
                <p>of the Week</p>
            </div>
        </div>
    </div>
    <div class="container flex flex-row items-center">
        <div class="text-2xl flex flex-col m-2">
            <h1 class="m-2 font-bold">Juiciest Picks</h1>
            <div class="d-flex flex-row justify-start items-center mt-2 text-base gap-2 container overflow-x-auto">
                {% for pick in juiciestPicks %}
                    <a class="flex flex-col justify-center">
                        <div class="bg-red-500 flex flex-col justify-end items-start" style="height: 30vh; width: 20vh; background-image: url('{{ baseImageUrl }}{{ pick.movie.getCoverPhoto() }}'); background-size: contain;">
                        </div>
                        <h2 class="ml-2 mb-1 font-bold text-shadow drop-shadow-2xl">{{ pick.movie.getTitle() }}</h2>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}