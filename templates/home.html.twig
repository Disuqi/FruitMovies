{% extends 'base.html.twig' %}

{% block title %}FilmFruits{% endblock %}
{% block body %}
    <div class="flex justify-center items-center m-auto" style="background-image: url({{ asset('assets/FruitsPattern.png') }}); background-size: cover; height: 50vh; background-position: center;">
        <div class="m-4 flex flex-col justify-end text-center bg-black border-2 w-12 h-12" style="background-image: url('{{ baseImageUrl }}{{ pickOfTheWeek.movie.getCoverPhoto() }}'); background-size: cover;">
            <div class="m-2">
                <h1 class="font-black text-2xl">FRUIT PICK</h1>
                <p class="font-bold">of the Week</p>
            </div>
        </div>
    </div>
    <div class="container flex flex-row mx-auto items-center">
        <div class="text-2xl flex flex-col m-2">
            <h1 class="m-2 font-bold">Juiciest Picks</h1>
            <div class="flex flex-row justify-start items-center mt-2 text-base gap-2 container overflow-x-auto">
                {% for pick in juiciestPicks %}
                    <a class="flex flex-col justify-center">
                        <div class="bg-red-500 flex flex-col justify-end items-start" style="height: 30vh; width: 20vh; background-image: url('{{ baseImageUrl }}{{ pick.movie.getCoverPhoto() }}'); background-size: contain;">
                        </div>
                        <h2 class="ml-2 mb-1 font-bold text-shadow drop-shadow-2xl">{{ pick.movie.getTitle() }}</h2>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}