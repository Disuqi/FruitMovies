{% extends 'components/base.html.twig' %}
{% block title %}Search User{% endblock %}
{% block body %}
    {{ include('components/header.html.twig') }}
    <div class="container mx-auto my-10">
        <div class="flex flex-row justify-between items-center mt-8 mb-4">
            <div class="flex flex-row gap-1">
                <h1 class="font-semibold text-2xl">Sort By: </h1>
                <button class="bg-gray-700 font-semibold rounded-md py-2 px-4">Name</button>
                <button class="bg-gray-900 font-semibold rounded-md py-2 px-4">Reviews</button>
            </div>
            <div class="flex flex-row gap-1">
                <button class="flex flex-row items-center justify-center bg-gray-700 font-semibold rounded-md py-2 px-4">Descending
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m0 0l6.75-6.75M12 19.5l-6.75-6.75" />
                    </svg>
                </button>
                <button class="flex flex-row items-center justify-center bg-gray-900 font-semibold rounded-md py-2 px-4">Ascending
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 19.5v-15m0 0l-6.75 6.75M12 4.5l6.75 6.75" />
                    </svg>
                </button>
                <button class="flex flex-row items-center justify-center ml-5 bg-indigo-900 hover:bg-indigo-500 font-semibold rounded-md py-2 px-4">Apply</button>
            </div>
        </div>
        <div id="moviesContainer" class="flex flex-row flex-wrap justify-center items-center gap-2">
            {% for user in users %}
                {% set profile_image = user.getProfileImage() %}
                <a href="{{ path('user', {'username' : user.username}) }}" class="flex flex-row justify-center align-middle items-center p-5 border border-gray-800 bg-gray-900 rounded-md w-[22rem]">
                    <div>
                        {% include 'elements/userProfileImage.html.twig' with {'width': 14, 'height': 14 } %}
                    </div>
                    <div class="flex flex-col gap-2 w-[80%] m-2">
                        <h1 class="text-xl font-medium ml-auto text truncate">@{{ user.getUsername() }}</h1>
                        <h1 class="text-xl font-medium ml-auto">{{ user.getReviews() | length }} reviews</h1>
                    </div>
                </a>
            {% endfor %}
        </div>
        {{ include('components/pagination.html.twig', {'searchType': 'searchUser'}) }}
    </div>
{% endblock %}