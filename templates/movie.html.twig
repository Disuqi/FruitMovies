{% extends 'components/base.html.twig' %}
{% block title %}{{ movie.getTitle() }}{% endblock %}
{% block body %}
    {{ include('components/header.html.twig') }}
    <div class="flex flex-row container mx-auto items-start justify-center mt-10">
        <img class="w-80 mx-12" src="{{ baseImageUrl }}{{ movie.getCoverPhoto() }}" alt="{{ movie.getCoverPhoto() }} Cover Photo"/>
        <div class="flex flex-col justify-start items-start gap-8">
            <div>
                <h1 class="text-4xl font-bold mb-2">{{ movie.getTitle() }}</h1>
                <p class="text-xl">{{ movie.getOverview() }}</p>
            </div>
            <div class="flex flex-row gap-6">
                <div class="flex flex-col justify-start gap-2">
                    <h2 class="text-2xl font-bold">Director</h2>
                    <div>
                        <img class="h-60 w-40" src="{{ baseImageUrl }}{{ movie.getDirector().getImage() }}" alt="{{ movie.getDirector().getName() }} Photo"/>
                        <h3 class="font-medium">{{ movie.getDirector().getName() }}</h3>
                    </div>
                </div>
                <div class="flex flex-col justify-start gap-2">
                    <h2 class="text-2xl font-bold">Cast</h2>
                    <div class="flex flex-row justify-start items-start gap-2 overflow-x-auto w-[55rem]">
                        {% for actor in movie.getActors() %}
                            <div class="flex flex-col justify-center">
                                <div class="h-60 w-40">
                                    <img src="{{ baseImageUrl }}{{ actor.getImage() }}" alt="{{ actor.getName() }} Photo"/>
                                </div>
                                <h3 class="font-medium">{{ actor.getName() }}</h3>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div>
                <div class="flex flex-row gap-2 items-center justify-start">
                    <h2 class="text-2xl font-bold">Reviews</h2>
                    <button class="hover:text-pink-400 transition-colors duration-100 ease-in-out">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </button>
                </div>
                <div class="flex flex-col gap-2 mt-4">
                    {% for review in movie.getReviews() %}
                        <div class="p-8 bg-gray-900 rounded-xl flex flex-col gap-2">
                            <div class="flex flex-row gap-4 items-center">
                                <div class="flex flex-row">
                                    {% for i in range(1, 10) %}
                                        {% if i <=  review.getScore() %}
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                            </svg>
                                        {% else %}
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                            </svg>
                                        {% endif %}
                                    {% endfor %}
                                    <h1 class="mx-2">RATING: {{ review.getScore() }}/10</h1>
                                </div>
                                <div class="ml-auto flex flex-row gap-2 m-1 items-center">
                                    <h3 class="text-xl">@{{ review.getUser().getUsername() }}</h3>
                                    <div class="bg-white rounded-full h-8 w-8"></div>
                                </div>
                            </div>
                            <div>
                                <p>{{ review.getComment() }}</p>
                            </div>
                            <div class="flex flex-row">
                                <div class="flex flex-row gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.5c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75A2.25 2.25 0 0116.5 4.5c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904M14.25 9h2.25M5.904 18.75c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 01-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 10.203 4.167 9.75 5 9.75h1.053c.472 0 .745.556.5.96a8.958 8.958 0 00-1.302 4.665c0 1.194.232 2.333.654 3.375z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 15h2.25m8.024-9.75c.011.05.028.1.052.148.591 1.2.924 2.55.924 3.977a8.96 8.96 0 01-.999 4.125m.023-8.25c-.076-.365.183-.75.575-.75h.908c.889 0 1.713.518 1.972 1.368.339 1.11.521 2.287.521 3.507 0 1.553-.295 3.036-.831 4.398C20.613 14.547 19.833 15 19 15h-1.053c-.472 0-.745-.556-.5-.96a8.95 8.95 0 00.303-.54m.023-8.25H16.48a4.5 4.5 0 01-1.423-.23l-3.114-1.04a4.5 4.5 0 00-1.423-.23H6.504c-.618 0-1.217.247-1.605.729A11.95 11.95 0 002.25 12c0 .434.023.863.068 1.285C2.427 14.306 3.346 15 4.372 15h3.126c.618 0 .991.724.725 1.282A7.471 7.471 0 007.5 19.5a2.25 2.25 0 002.25 2.25.75.75 0 00.75-.75v-.633c0-.573.11-1.14.322-1.672.304-.76.93-1.33 1.653-1.715a9.04 9.04 0 002.86-2.4c.498-.634 1.226-1.08 2.032-1.08h.384" />
                                    </svg>
                                </div>
                                <p class="text-right text-gray-400 ml-auto">{{ review.getDateReviewed().format("Y-m-d H:i:s") }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}