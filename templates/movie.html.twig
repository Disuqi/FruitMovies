{% extends 'components/base.html.twig' %}
{% block title %}{{ movie.getTitle() }}{% endblock %}
{% block body %}
    {{ include('components/header.html.twig') }}
    {% set director, actors, reviews =  movie.getDirector(), movie.getActors(), movie.getReviews() %}
    <div class="flex flex-row container mx-auto items-start justify-center mt-10">
        <img class="w-80 mx-12" src="{{ base_image_url }}{{ movie.getCoverPhoto() }}" alt="{{ movie.getCoverPhoto() }} Cover Photo"/>
        <div class="flex flex-col justify-start items-start gap-8">
            <div>
                <div class="mb-2">
                    <h1 class="text-4xl font-bold">{{ movie.getTitle() }}</h1>
                    <h3 class="ml-auto font-semibold">{{ movie.getReleaseDate().format("d-m-Y") }}</h3>
                </div>
                <p class="text-xl">{{ movie.getOverview() }}</p>
            </div>
            <div class="flex flex-row gap-6">
                {% if director %}
                    <div class="flex flex-col justify-start gap-2">
                        <h2 class="text-2xl font-bold">Director</h2>
                        <div>
                            <img class="h-60 w-40" src="{{ base_image_url }}{{ director.getImage() }}" alt="{{ director.getName() }} Photo"/>
                            <h3 class="font-medium">{{ director.getName() }}</h3>
                        </div>
                    </div>
                {% endif %}
                {% if actors %}
                    <div class="flex flex-col justify-start gap-2">
                        <h2 class="text-2xl font-bold">Cast</h2>
                        <div class="flex flex-row justify-start items-start gap-2 overflow-x-auto w-[55rem]">
                            {% for actor in actors %}
                                <div class="flex flex-col justify-center">
                                    <div class="h-60 w-40 flex justify-center items-center">
                                        {% if actor.getImage() %}
                                            <img src="{{ base_image_url }}{{ actor.getImage() }}" alt="{{ actor.getName() }} Photo"/>
                                        {% else %}
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-full" viewBox="0 0 16 16">
                                                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                                            </svg>
                                        {% endif %}
                                    </div>
                                    <h3 class="font-medium">{{ actor.getName() }}</h3>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
            {% if reviews.count > 0 %}
                <div>
                    <div class="flex flex-row gap-2 align-middle text-center items-center justify-start">
                        <h2 class="text-2xl font-bold">Reviews</h2>
                        {% if is_granted('IS_AUTHENTICATED') %}
                            <button class="hover:text-pink-400 transition-colors duration-100 ease-in-out">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </button>
                        {% endif %}
                    </div>
                    <div class="flex flex-col gap-2 mt-4">
                        {% for review in reviews %}
                            <div class="p-8 bg-gray-900 rounded-xl flex flex-col gap-2">
                                <div class="flex flex-row gap-4 items-center">
                                    <div class="flex flex-row">
                                         {% for i in range(1, 10) %}
                                            {% if i <=  review.getScore() %}
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                                </svg>
                                            {% else %}
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                                </svg>
                                            {% endif %}
                                        {% endfor %}
                                        <h1 class="mx-2 font-black">{{ review.getScore() }} / 10</h1>
                                    </div>
                                    <div class="ml-auto flex flex-row gap-2 m-1 items-center">
                                        <h3 class="text-xl">@{{ review.getUser().getUsername() }}</h3>
                                        <div class="bg-white rounded-full h-8 w-8"></div>
                                    </div>
                                </div>
                                <div>
                                    <p>{{ review.getComment() }}</p>
                                </div>
                                <div class="flex flex-row">
                                    <div class="flex flex-row gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11.25l-3-3m0 0l-3 3m3-3v7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>

                                        <p>32</p>
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75l3 3m0 0l3-3m-3 3v-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        <p>0</p>
                                    </div>
                                    <p class="text-right text-gray-400 ml-auto">{{ review.getDateReviewed().format("Y-m-d H:i:s") }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}